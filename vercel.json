{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "src": "/chatkit", "dest": "api/index.py" },
    { "src": "/health", "dest": "api/index.py" },
    { "src": "/api/(.*)", "dest": "api/index.py" },
    { "src": "/debug/(.*)", "dest": "api/index.py" },
    { "src": "/qdrant-data", "dest": "api/index.py" },
    { "src": "/(.*)", "dest": "frontend/dist/$1" }
  ]
}
