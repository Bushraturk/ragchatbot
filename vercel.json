{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/api/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/api/main.py"
    },
    {
      "src": "/health",
      "dest": "backend/src/api/main.py"
    },
    {
      "src": "/chatkit",
      "dest": "backend/src/api/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.11"
  }
}
